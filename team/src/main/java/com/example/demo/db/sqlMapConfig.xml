<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
  <properties resource="com/example/demo/db/db.properties"/>
  <typeAliases>
  	<typeAlias type="com.example.demo.PostVO" alias="postVo"/>
  	<typeAlias type="com.example.demo.ReplyVO" alias="replyVo"/>
  	<typeAlias type="com.example.demo.CustomerVO" alias="customerVO"/>
  </typeAliases>
  <environments default="development">
    <environment id="development">
      <transactionManager type="JDBC"/>
      <dataSource type="POOLED">
        <property name="driver" value="${driver}"/>
        <property name="url" value="${url}"/>
        <property name="username" value="${username}"/>
        <property name="password" value="${password}"/>
      </dataSource>
    </environment>
  </environments>
  <mappers>
    <mapper resource="com/example/demo/PostMapper.xml"/> 
	<mapper resource="com/example/demo/db/ReplyMapper.xml"/>
	<mapper resource="com/example/demo/db/QnaMapper.xml"/>
	<mapper resource="com/example/demo/db/CustomerMapper.xml"/>
  </mappers>
</configuration>